            cout << "Ingrese un caracter: ";
            cin >> C;
            if (( C>='A' && C<='Z') || (C>='a' && C<='z')) {
                if( C == 'a' || C == 'A' || C == 'e' || C == 'E' || C == 'i' || C == 'I' ||C == 'o' || C == 'O' ||C == 'a' || C == 'U' ){
                cout << C<< " es una vocal " << endl;
