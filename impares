                        }
                        while(i!=A){
                            estrellas=estrellas << '*';
                            i=i+1;
                        }

                        cout << espacios << estrellas;

                        if((B==0 && A==N) || (w==1)){
                            B=B+1;
                            A=A-2;
                            w=1;
                        }
                        else{
                                B=B-1;
                                A=A+2;
                        }
                    }
                }
            }

            break;

