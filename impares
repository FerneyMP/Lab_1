            A=0; //lim inferior
            B=100; //lim superior
            do{
                F= (A+B)/2;    //busqueda binaria
                cout<<F<<" es mayor, menor o igual a su numero en mente [ > , < , = ]:  ";
                cin >>C; cout << endl;

                switch (C) {
                    case '>':{
                        B=F;
                        break;
                    }
                    case '<' :{
                        A=F;
                        break;
