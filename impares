            break;

        case 7:
            break;

        case 8:
            break;

        case 9:
            break;

        case 10:
            break;

        case 11:
            //Programa que reciba un número y calcule el mínimo común múltiplo de todos los números enteros entre 1 y el número ingresado
            cout << "Ingrese un numero: ";
            cin >> N;
            for (int i=1; band2; i++){
                mul=N*i;
                band=true;
                 for (int j=N-1; band; j--){
                     if(mul%j != 0){
                         band=false;
                     }
                     if(j==1){
                         band=false;
                         band2=false;
                     }
                 }
